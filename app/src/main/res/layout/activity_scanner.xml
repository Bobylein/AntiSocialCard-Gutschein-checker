<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ScannerActivity">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Dark overlay with transparent center -->
    <View
        android:id="@+id/overlayTop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/scanner_overlay"
        app:layout_constraintBottom_toTopOf="@id/scannerFrame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/overlayLeft"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/scanner_overlay"
        app:layout_constraintBottom_toTopOf="@id/overlayBottom"
        app:layout_constraintEnd_toStartOf="@id/scannerFrame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/overlayTop" />

    <View
        android:id="@+id/overlayRight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/scanner_overlay"
        app:layout_constraintBottom_toTopOf="@id/overlayBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/scannerFrame"
        app:layout_constraintTop_toBottomOf="@id/overlayTop" />

    <View
        android:id="@+id/overlayBottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/scanner_overlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scannerFrame" />

    <!-- Scanner frame - länglich für Barcode -->
    <View
        android:id="@+id/scannerFrame"
        android:layout_width="@dimen/scanner_frame_width"
        android:layout_height="@dimen/scanner_frame_height"
        android:background="@drawable/scanner_frame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/scanner_overlay"
        android:orientation="vertical"
        android:padding="@dimen/spacing_md"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="@color/on_primary" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            android:text="@string/scanner_title"
            android:textColor="@color/on_primary"
            android:textSize="@dimen/text_headline"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Instruction text -->
    <TextView
        android:id="@+id/tvInstruction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lg"
        android:layout_marginTop="@dimen/spacing_md"
        android:layout_marginEnd="@dimen/spacing_lg"
        android:gravity="center"
        android:text="@string/scanner_instruction"
        android:textColor="@color/on_primary"
        android:textSize="@dimen/text_body"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scannerFrame" />

    <!-- Detected barcode display -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardDetected"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lg"
        android:layout_marginEnd="@dimen/spacing_lg"
        android:layout_marginBottom="@dimen/spacing_lg"
        android:visibility="gone"
        app:cardBackgroundColor="@color/surface"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        app:layout_constraintBottom_toTopOf="@id/btnManualEntry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_md">

            <TextView
                android:id="@+id/tvDetectedLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Erkannt:"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_caption" />

            <TextView
                android:id="@+id/tvDetectedBarcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:text="Barcode: -"
                android:textColor="@color/on_surface"
                android:textSize="@dimen/text_body"
                android:textStyle="bold"
                tools:text="Barcode: 1234567890123456789" />

            <TextView
                android:id="@+id/tvDetectedPin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:text="PIN: -"
                android:textColor="@color/on_surface"
                android:textSize="@dimen/text_body"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="PIN: 1234" />

            <Button
                android:id="@+id/btnUseBarcode"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="@dimen/spacing_sm"
                android:background="@drawable/button_primary"
                android:text="Use this barcode"
                android:textAllCaps="false"
                android:textColor="@color/on_primary" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Manual entry button -->
    <Button
        android:id="@+id/btnManualEntry"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:layout_marginStart="@dimen/spacing_lg"
        android:layout_marginEnd="@dimen/spacing_lg"
        android:layout_marginBottom="@dimen/spacing_xl"
        android:background="@drawable/button_secondary"
        android:text="Manuell eingeben"
        android:textAllCaps="false"
        android:textColor="@color/secondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Loading indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/secondary"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/scannerFrame"
        app:layout_constraintEnd_toEndOf="@id/scannerFrame"
        app:layout_constraintStart_toStartOf="@id/scannerFrame"
        app:layout_constraintTop_toTopOf="@id/scannerFrame" />

    <!-- Barcode highlight overlay - positioned relative to previewView -->
    <View
        android:id="@+id/barcodeHighlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/highlight_barcode"
        android:visibility="gone"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="@id/previewView"
        app:layout_constraintTop_toTopOf="@id/previewView" />

    <!-- PIN highlight overlay - positioned relative to previewView -->
    <View
        android:id="@+id/pinHighlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/highlight_pin"
        android:visibility="gone"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="@id/previewView"
        app:layout_constraintTop_toTopOf="@id/previewView" />

    <!-- Debug: PIN search region overlay - shows where we're looking for PIN -->
    <View
        android:id="@+id/pinSearchRegionHighlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/highlight_debug"
        android:visibility="gone"
        android:elevation="9dp"
        app:layout_constraintStart_toStartOf="@id/previewView"
        app:layout_constraintTop_toTopOf="@id/previewView" />

    <!-- Debug: Text view to show OCR results -->
    <TextView
        android:id="@+id/tvDebugOcr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_md"
        android:layout_marginEnd="@dimen/spacing_md"
        android:layout_marginBottom="@dimen/spacing_sm"
        android:background="#80000000"
        android:fontFamily="monospace"
        android:padding="@dimen/spacing_sm"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/cardDetected"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

